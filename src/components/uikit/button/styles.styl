@import "~components/variables"

$hover = 20%
$disabled = 50%
ComposeButton($color)
  &
    background: $color
    border-color: $color

    &:hover, &.active
      background: lighten($color, $hover)
      border-color: lighten($color, $hover)

    &.hollow, &.fakelink
      color: $color

      &:hover
        color: lighten($color, $hover)

    &.fakelink:hover
      background: transparent

    &.disabled, &.disabled:hover
      background: $button-disabled // lighten($color, $disabled)
      border-color: $button-disabled // lighten($color, $disabled)

.Button
  display: inline-block
  padding: 0 40px
  height: 40px
  line-height: @height
  border: 1px solid $text-grey
  background: white
  outline: none
  color: $text-grey
  border-radius: 3px
  transition: all linear 200ms
  cursor: pointer
  font: normal normal 500 16px Poppins, sans-serif

  //
  // colors
  &.primary, &.success, &.warning, &.danger
    color: white

    &.hollow, &.hollow:hover
      background: white

  &.cta
    color: $mob-purple

  &.primary
    ComposeButton($button-primary)
  &.success
    ComposeButton($button-success)
  &.warning
    ComposeButton($button-warning)
  &.danger
    ComposeButton($button-danger)
  &.cta
    ComposeButton($yellow)

  //
  // sizes
  &.small
    font-size: 16px
    padding: 0 15px
    height: 30px
    line-height: @height

  &.bold
    font-weight: 600

  //
  // behaviour
  &.disabled
    cursor: default

  &.fakelink
    border: none
    background: transparent
    text-decoration: underline
    padding: 0
    height: auto
    line-height: initial

  &.centered
    position: relative
    left: 50%
    transform: translateX(-50%)

  &.form
    margin-top: 35px
    width: 40%
    float: right
    height: 50px
    line-height: @height

    &.centered
      width: auto
      float: none

  //
  // dimensions
  &.fullwidth
    width: 100% !important

  &.halfwidth
    width: 50% !important
    margin-left: auto
    margin-right: auto

  //
  // children
  .Spinner
    vertical-align: text-bottom
