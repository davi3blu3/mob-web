@import "~styles/variables"

.AdminUsers
  position: relative

  .content.white
    padding: 0 60px 0 20px

  .tools
    padding: 20px 0
    border-bottom: 5px solid $mob-purple

    h3
      display: inline-block
      margin-right: 20px

    .Button
      margin-right: 10px

  tr.admin td
    font-weight: 700
    color: $mob-red

  table tbody tr td
    vertical-align: baseline

    &.avatar
      padding: 5px
      width: 60px

      .Avatar
        margin-right: 0

    &.actions
      width: 180px

      .Button
        padding: 0

    &.social img
      margin-right: 10px
      height: 20px
      vertical-align: middle

    .Avatar
      vertical-align: text-top

    .Button
      display: block
      margin-bottom: 2px

  pre
    background: #eee
    padding: 10px
