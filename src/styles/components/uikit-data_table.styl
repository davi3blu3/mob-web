@import "~styles/variables"

$border-width = 5px

.DataTable
  position: relative

  .search, .search-bar
    height: 55px
    border-bottom: $border-width solid $mob-purple

  .search
    position: absolute
    top: -4px
    width: 50px
    right: -@width
    text-align: center
    padding-top: 13px

    img
      cursor: pointer

  .search-bar
    position: absolute
    top: 2px
    right: $border-width
    width: 0;
    height: 49px
    overflow: hidden
    background: white
    padding-top: 2px
    transition: width 0.5s ease-in-out

    &.visible
      width: "calc(100% - %s)" % ($border-width * 2)

    input
      width: 100%
      height: 36px
      border-radius: 5px
      border: 2px solid $mob-purple
      padding: 0 10px
      font: normal normal 500 22px Asap, sans-serif
      color: $mob-purple
      outline: none

  table
    border-collapse: collapse
    width: 100%

    th, td
      border: 5px solid white
      padding: 7px 10px
      vertical-align: middle

    thead
      th
        text-align: center
        border-bottom: $border-width solid $mob-purple
        font: normal normal 500 18px Poppins, sans-serif

        .sort-controls, .filter-controls
          margin-left: 5px

          button
            border: none
            background: none
            outline: none
            padding: 1px
            cursor: pointer
            font-size: 17px
            color: $light-grey

            &.selected
              color: $mob-purple

    tbody
      tr:nth-child(even) td
        background: rgba($mob-purple, 0.05)
