@import "~styles/variables"

.AdminDashboard
  position: relative

  h1
    color: $mob-purple

  .Stats
    display: flex
    justify-content: space-around
    align-items: stretch
    flex-wrap: wrap
    padding: 25px

    .section
      width: calc(100% / 3)
      padding: 0 30px
      margin-bottom: 30px
      border-left: 2px solid $mob-purple
      font-size: 20px
      line-height: 1.5

      &.two-thirds
        width: calc(100% / 3 * 2)

      &.halfwidth
        width: 50%

      &.fullwidth
        width: 100%

        ul
          margin-top: 20px

          &.missing-voters
            columns: 3

          h3, h4
            text-align: left
            margin-bottom: 0

          li ul
            margin-top: 5px
            margin-bottom: 15px

      h2
        margin-top: 0
        text-align: left
        color: black

      table.stats
        td
          vertical-align: baseline

        td:first-child
          padding-right: 10px
          text-align: right
          color: $mob-purple
          font-size: 28px
          font-weight: 600
          text-align: right

      ul.stats
        display: table

        li
          display: table-row

          span
            padding: 5px 10px
            display: table-cell
