@import "~components/variables"

*, *:before, *:after
  box-sizing: border-box

html, body, #app
  width: 100vw
  height: 100vh
  font-family: sans-serif

.App
  position: relative
  top: $navbar-height
  height: "calc(100vh - %s)" % $navbar-height

  .content
    width: 100%
    height: 100%
    overflow-y: auto
    display: flex
    align-items: center
    justify-content: center

//
// Forms
form
  margin: 10px 0

  label
    font-family: sans-serif
    margin: 5px 0

  input
    &[type=text], &[type=password], &[type=email], &[type=number], &[type=tel]
      display: inline-block
      margin: 5px 0
      padding: 10px 10px
      font-family: sans-serif
      border: 1px solid $light-grey
      border-radius: 3px

      &.fullwidth
        width: 100%

      &.left, &.right
        width: 50%

      &.left
        border-radius: 3px 0 0 3px

      &.right
        border-radius: 0 3px 3px 0
        border-left: none
        

  button
    &[type=submit]
      margin: 15px 0 0
