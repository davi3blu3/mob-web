@import "~components/variables"

*, *:before, *:after
  box-sizing: border-box

html, body, #app
  width: 100vw
  height: 100vh
  font-family: sans-serif

.App
  position: relative
  top: $navbar-height
  height: "calc(100vh - %s)" % $navbar-height

  .content
    width: 100%
    height: 100%
    padding: 30px
    overflow-y: auto
    display: flex
    align-items: flex-start
    justify-content: center

//
// Utility classes
.clearfix
  &:after
    content: ""
    display: table
    clear: both

//
// Forms
form
  margin: 10px 0
  @extend .clearfix

  label
    font-family: sans-serif
    margin: 5px 0
    display: block

    input
      margin-right: 10px

  input
    &[type=text], &[type=password], &[type=email], &[type=number], &[type=tel]
      display: inline-block
      margin: 5px 0
      padding: 10px 10px
      font-family: sans-serif
      border: 1px solid $light-grey
      border-radius: 3px

      &.fullwidth
        width: 100%

      &.left, &.right
        width: 50%

      &.left
        border-radius: 3px 0 0 3px

      &.right
        border-radius: 0 3px 3px 0
        border-left: none

      &.icon
        background: transparent 95% center no-repeat
        background-size: 24px 24px

        &.github
          background-image: url("~assets/images/github.svg")
        &.twitter
          background-image: url("~assets/images/twitter.svg")

  select
    display: inline-block
    height: 40px
    margin: 5px 0
    font-family: sans-serif
    border: 1px solid $light-grey
    background: none
    border-radius: 3px

    &.fullwidth
      width: 100%

  textarea
    display: inline-block
    margin: 5px 0
    padding: 10px
    font-family: sans-serif
    border: 1px solid $light-grey
    border-radius: 3px
    min-height: 120px
    max-width: 100%

    &.fullwidth
      width: 100%

  button
    &[type=submit]
      margin: 15px 0 0
