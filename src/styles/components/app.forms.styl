@import "~styles/variables"

//
// Forms
form
form.form
  margin: 10px 0

  &.form--hidden
    display: none;

  &.form--inline
    display: flex
    align-items: flex-start
    justify-content: flex-start
    margin: 0

    input, select
      margin: 0

    > div, [type=submit]
      margin-top: 0
      margin-right: 10px

    [type=submit]
      height: 50px
      font-size: 16px

      &.btn.icon
        padding-right: 40px !important
        background-position: center right 10px
        background-size: 25px 25px

    .ErrorMessage
      display: block

  &.form--datatable
    margin: 0
    padding: 0



  // FIXME: @extend .clearfix
  &:after
    content: ""
    display: table
    clear: both

label
  font: normal normal 500 12px Asap, serif
  letter-spacing: 1px
  text-transform: uppercase
  margin: 15px 0 3px
  display: block
  color: $label-grey

  &.text
    font: normal normal 400 14px Asap, sans-serif
    text-transform: none
    letter-spacing: normal

  &.checkbox
    display: flex

    input
      min-width: 20px

    .required
      line-height: 1

    span
      line-height: 1.4

  input
    margin-right: 10px

input, select, textarea, option
  font: normal normal 400 14px Asap, sans-serif
  font-size: 16px
  color: $text-grey

input
  &[type=text], &[type=password], &[type=email], &[type=number], &[type=tel]
    display: inline-block
    margin: 5px 0
    padding: 15px
    border: 1px solid $light-grey
    border-radius: 3px
    color: $text-grey

    &[disabled]
      background: #f1f1f1

    &.fullwidth
      width: 100%

    &.left, &.right
      width: 50%

    &.left
      border-radius: 3px 0 0 3px

    &.right
      border-radius: 0 3px 3px 0
      border-left: none

    &.icon
      background: transparent 95% center no-repeat
      background-size: 24px 24px

      &.github
        background-image: url("~assets/images/github-grey.svg")
      &.twitter
        background-image: url("~assets/images/twitter-grey.svg")
      &.linkedin
        background-image: url("~assets/images/linkedin-grey.svg")

    &::placeholder
      color: $light-grey

select
  display: inline-block
  min-width: 140px
  height: 50px
  margin: 5px 0
  border: 1px solid $light-grey
  background: none
  border-radius: 3px
  text-indent: 6px

  &.fullwidth
    width: 100%

.Select
  margin: 5px 0

  .Select-control > [class*=value-wrapper]
    padding: 2px 0

    .Select-placeholder
      padding: 2px 0 2px 10px

input, select
  &.input--short
    margin: 0
    height: 20px
    padding: 0 5px
    font-size: 12px

textarea
  display: inline-block
  margin: 5px 0
  padding: 10px 14px
  border: 1px solid $light-grey
  border-radius: 3px
  min-height: 120px
  max-width: 100%

  &.fullwidth
    width: 100%

  &::placeholder
    color: $light-grey

button
  &[type=submit]
    margin: 15px 0 0
